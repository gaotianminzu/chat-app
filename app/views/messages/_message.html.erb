<div class="message">
  <div class="one_box">

    <div class="m_box">
      <div class="n_box">
      <!-- 投稿したユーザー名情報を出力する -->
      <%= message.user.name %>
      </div>
      <div class="d_box">
      <!-- 投稿した時刻を出力する -->
      <%= l message.created_at %>
      </div>
    </div>
    <div class="t_box">
      <!-- 投稿したメッセージ内容を記述する -->
      <%= message.content %>
    </div>
   <%= image_tag message.image.variant(resize:'500x500'), class: 'message-image' if message.image.attached?%>
  </div>
</div>